<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>No-as-a-Service Demo</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 50px;
    }
    #reason {
      font-size: 1.5rem;
      margin: 20px;
      color: #222;
    }
    button {
      font-size: 1rem;
      padding: 10px 20px;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <h1>Random “No” Reason</h1>
  <div id="reason">Press the button to get a reason</div>
  <button id="fetchBtn">Get a New Reason</button>

  <script>
    async function fetchNo() {
      try {
        const response = await fetch("https://naas.isalman.dev/no");
        if (!response.ok) {
          throw new Error("Network response was not ok");
        }
        const data = await response.json();
        document.getElementById("reason").textContent = data.reason;
      } catch (error) {
        document.getElementById("reason").textContent = "Error fetching reason";
        console.error("Fetch error:", error);
      }
    }

    document.getElementById("fetchBtn").addEventListener("click", fetchNo);
  </script>

</body>
</html>
